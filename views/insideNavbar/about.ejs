<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Profile Madrasah - MI AL IKHLAS</title>

    <!-- mobile responsive meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- ** Plugins Needed for the Project ** -->
    <!-- Bootstrap -->
    <link rel="stylesheet" href="/plugins/bootstrap/bootstrap.min.css">
    <!-- slick slider -->
    <link rel="stylesheet" href="/plugins/slick/slick.css">
    <!-- themefy-icon -->
    <link rel="stylesheet" href="/plugins/themify-icons/themify-icons.css">
    <!-- animation css -->
    <link rel="stylesheet" href="/plugins/animate/animate.css">
    <!-- aos -->
    <link rel="stylesheet" href="/plugins/aos/aos.css">
    <!-- venobox popup -->
    <link rel="stylesheet" href="/plugins/venobox/venobox.css">

    <!-- Main Stylesheet -->
    <link href="/css/style.css" rel="stylesheet">

    <!-- Quilljs -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet" />
    
    <!--Favicon-->
    <link rel="shortcut icon" href="/images/logoMi.png" type="image/x-icon">
    <link rel="icon" href="/images/logoMi.png" type="image/x-icon">

  </head>

  <body>
    <!-- header -->
    <header class="fixed-top header">
      <!-- top header -->

      <!-- INCLUDE TOP HEADER -->
      <%- include("../include/_topheader.ejs") %>  

      <!-- navbar -->
      <div class="navigation w-100">
        <div class="container">

          <!-- INCLUDE NAVBAR -->
          <%- include("../include/_navbar.ejs") %>

        </div>
      </div>
    </header>
    <!-- /header -->

    <!-- Login Modal -->

    <!-- INCLUDE LOGIN MODAL -->
    <%- include("../include/_login.ejs") %>


    <!-- about us -->
    <section class="page-title-section overlay">
      <div class="container">
        <div class="row">
          <div class="col-md-8">
            <ul class="list-inline custom-breadcrumb">
              <li class="list-inline-item"><a class="h2 text-primary font-secondary" href="/showSingleProfile/13">Tentang Kami</a></li>
              <li class="list-inline-item text-white h3 font-secondary @@nasted"></li>
            </ul>
          </div>
        </div>
      </div>
    </section>
    <!-- /about us -->

    <!-- School history -->
    <section class="section">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <% if (profile) { %>
            <img class="img-fluid w-100 mb-4" src="/uploads/<%= profile.bannerimg %>" alt="banner image">
            <h2 class="section-title">Sejarah Singkat</h2>
            <div id="show-sejarah" class="ql-editor"><%- profile.sejarah %></div>
            <% } else { %>
            <div class="alert alert-warning">Data not available for the school history.</div>
            <% } %>
          </div>
        </div>
      </div>
    </section>
    <!-- /School history-->

    <!-- border line-->
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="d-flex align-items-center section-title justify-content-between">
            <div class="border-top w-100 border-primary d-none d-sm-block"></div>
          </div>
        </div>
      </div> 
    </div>
    <!-- /border line-->

    <!-- headmaster -->
    <section class="section">
      <div class="container">
        <div class="row mb-5">
          <% if (profile) { %>
          <div class="col-md-6 mb-4 mb-md-0">
            <img class="img-fluid" src="/uploads/<%= profile.kepsekimg %>" alt="kepsek image">
          </div>
          <div class="col-md-6">
            <h2>Kepala Madrasah</h2>
            <strong class="mb-4 d-block"><i><%= profile.namakepsek %></i></strong>
            <div id="show-tentangkepsek" class="ql-editor"><%- profile.tentangkepsek %></div>
          </div>
          <% } else { %>
          <div class="alert alert-warning">Data not available for the headmaster section.</div>
          <% } %>
        </div>
      </div>
    </section>
    <!-- /headmaster-->

    <!-- border line-->
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="d-flex align-items-center section-title justify-content-between">
            <div class="border-top w-100 border-primary d-none d-sm-block"></div>
          </div>
        </div>
      </div> 
    </div>
    <!-- /border line-->


    <!-- vision and mission -->
    <section class="section">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <% if (profile) { %>
            <h2 class="section-title">Visi dan Misi</h2>
            <div id="show-visimisi" class="ql-editor"><%- profile.visimisi %></div>
            <% } else { %>
            <div class="alert alert-warning">Vision and Mission data is not available.</div>
            <% } %>
          </div>
        </div>
      </div>
    </section>
    <!-- /vision and mission-->


    <!-- border line-->
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="d-flex align-items-center section-title justify-content-between">
            <div class="border-top w-100 border-primary d-none d-sm-block"></div>
          </div>
        </div>
      </div> 
    </div>
    <!-- /border line-->

    <!-- work program -->
    <section class="section">
      <div class="container">
        <div class="row">
          <div class="col-12" >
            <% if (profile) { %>
            <h2 class="section-title">Program Unggulan</h2>
            <div id="show-programkerja" class="ql-editor"><%- profile.programkerja %></div>
            <% } else { %>
            <div class="alert alert-warning">Work program data is not available.</div>
            <% } %>
          </div>
        </div>
      </div>
    </section>
    <!-- /work program-->

    <!-- border line-->
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="d-flex align-items-center section-title justify-content-between">
            <div class="border-top w-100 border-primary d-none d-sm-block"></div>
          </div>
        </div>
      </div> 
    </div>
    <!-- /border line-->

    <!-- school committee -->
    <section class="section">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <% if (profile) { %>
            <h2 class="section-title">Komite Madrasah</h2>
            <div id="show-komitesekolah" class="ql-editor"><%- profile.komitesekolah %></div>
            <% } else { %>
            <div class="alert alert-warning">School committee data is not available.</div>
            <% } %>
          </div>
        </div>
      </div>
    </section>
    <!-- /school committee -->

    <!-- border line-->
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="d-flex align-items-center section-title justify-content-between">
            <div class="border-top w-100 border-primary d-none d-sm-block"></div>
          </div>
        </div>
      </div> 
    </div>
    <!-- /border line-->

    <!-- students achievements -->
    <section class="section">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <% if (profile) { %>
            <h2 class="section-title">Prestasi Siswa</h2>
            <div id="show-prestasisiswa" class="ql-editor"><%- profile.prestasisiswa %></div>
            <% } else { %>
            <div class="alert alert-warning">Student achievements data is not available.</div>
            <% } %>
          </div>
        </div>
      </div>
    </section>
    <!-- /students achievements -->

    <!-- footer -->

    <!-- INCLUDE FOOTER -->
    <%- include("../include/_footer.ejs") %>

    <!-- /footer -->

    <!-- jQuery -->
    <script src="/plugins/jQuery/jquery.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="/plugins/bootstrap/bootstrap.min.js"></script>
    <!-- slick slider -->
    <script src="/plugins/slick/slick.min.js"></script>
    <!-- aos -->
    <script src="/plugins/aos/aos.js"></script>
    <!-- venobox popup -->
    <script src="/plugins/venobox/venobox.min.js"></script>
    <!-- mixitup filter -->
    <script src="/plugins/mixitup/mixitup.min.js"></script>
    <!-- google map -->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCcABaamniA6OL5YvYSpB3pFMNrXwXnLwU&libraries=places"></script>
    <script src="/plugins/google-map/gmap.js"></script>

    <!-- Main Script -->
    <script src="/js/script.js"></script>

  </body>
</html>
